<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/output"
        android:gravity="right"
        android:paddingRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="80dp"
        android:textColor="@color/colorText"/>
    <Button
        android:text="AC"
        android:textSize="32dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="7dp"
        android:id="@+id/ac"
        android:layout_below="@+id/output"
        android:background="@drawable/circle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="+/-"
        android:textSize="32dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="7dp"
        android:id="@+id/plusDivide"
        android:layout_toRightOf="@+id/ac"
        android:layout_below="@+id/output"
        android:background="@drawable/circle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="%"
        android:textSize="32dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="7dp"
        android:id="@+id/percent"
        android:layout_toRightOf="@id/plusDivide"
        android:layout_below="@+id/output"
        android:background="@drawable/circle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="/"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/divide"
        android:layout_toRightOf="@id/percent"
        android:layout_below="@+id/output"
        android:background="@drawable/circle_button_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="7"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/seven"
        android:layout_below="@+id/ac"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="8"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/eight"
        android:layout_toRightOf="@+id/ac"
        android:layout_below="@+id/ac"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="9"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/nine"
        android:layout_toRightOf="@id/plusDivide"
        android:layout_below="@+id/ac"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="X"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/multi"
        android:layout_toRightOf="@id/percent"
        android:layout_below="@+id/ac"
        android:background="@drawable/circle_button_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="4"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/four"
        android:layout_below="@+id/eight"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="5"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/five"
        android:layout_toRightOf="@+id/ac"
        android:layout_below="@+id/eight"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="6"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/six"
        android:layout_toRightOf="@id/plusDivide"
        android:layout_below="@+id/eight"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="-"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/sub"
        android:layout_toRightOf="@id/percent"
        android:layout_below="@+id/eight"
        android:background="@drawable/circle_button_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="1"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/one"
        android:layout_below="@+id/four"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="2"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/two"
        android:layout_toRightOf="@+id/ac"
        android:layout_below="@+id/four"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="3"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/three"
        android:layout_toRightOf="@id/plusDivide"
        android:layout_below="@+id/four"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="+"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/plus"
        android:layout_toRightOf="@id/percent"
        android:layout_below="@+id/four"
        android:background="@drawable/circle_button_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="0"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/zero"
        android:layout_below="@+id/one"
        android:background="@drawable/capsule_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="."
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/period"
        android:layout_toRightOf="@id/plusDivide"
        android:layout_below="@+id/one"
        android:background="@drawable/circle_button_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="="
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:layout_margin="7dp"
        android:id="@+id/equal"
        android:layout_toRightOf="@id/percent"
        android:layout_below="@+id/one"
        android:background="@drawable/circle_button_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>